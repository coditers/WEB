<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="client">
  <select id="selectAll" resultType="clientvo">
    <![CDATA[

     SELECT *
       FROM client

    ]]>
  </select>

  <insert id="insert" parameterType="clientvo">
    <![CDATA[
      INSERT
        INTO client
      VALUES (null, #{name}, #{email}, #{password});
    ]]>
    <selectKey keyProperty="id" resultType="int">
      SELECT LAST_INSERT_ID()
    </selectKey>
  </insert>

  <select id="selectById" resultType="clientvo" parameterType="int">
    <![CDATA[
      SELECT *
        FROM client
       WHERE id=#{id }

    ]]>
  </select>

  <select id="selectByEmailPassword" resultType="clientvo" parameterType="clientvo">
    <![CDATA[
      SELECT id AS id,
             name AS name,
             email AS email,
             password AS password
        FROM client
       WHERE id = #{id}
         AND password = PASSWORD(#{password})
    ]]>
  </select>

</mapper>