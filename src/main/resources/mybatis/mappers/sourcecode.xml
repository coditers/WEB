<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sourcecode">
  <select id="selectAll" resultType="sourcecodevo">
    <![CDATA[ SELECT * FROM source_code ]]>
  </select>

  <insert id="insert" parameterType="sourcecodevo">
    <![CDATA[insert into source_code value(null, '지성이는 고심 끝에 helloworld만 제출하였다', 1, 1); ]]>
    <selectKey keyProperty="id" resultType="int">
      SELECT LAST_INSERT_ID()
    </selectKey>
  </insert>

  <select id="selectById" resultType="sourcecodevo" parameterType="int">
    <![CDATA[  SELECT * FROM source_code WHERE id=#{id } ]]>
  </select>
</mapper>